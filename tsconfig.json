{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ES6",
    "module": "esnext",
    "noImplicitAny": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "declaration.d.ts",
    "src/image", 
    "server" , "app.js"],
  "exclude": [".typescript/node_modules/"]   ,
  
 }  
 